#!/bin/sh
set -e
set -u
cd "$MOBILE_DIR"/0_planning || exit 2

# create panes
tmux split-window -h
tmux split-window
tmux select-pane -L
tmux split-window
tmux resize-pane -D 10
tmux select-pane -U

# need when syncthing tiro across computers
chmod u+x tiro
# tmux respawn-pane -t top-right -k 'tiro -a activities.txt -w -n -p history -s history'
tmux respawn-pane -t top-right -k  'while true; do RUST_BACKTRACE=1 tiro -w -n -a activities.txt -p history -s history ; echo "bug, exited..." ; sleep 2; done'


tmux respawn-pane -t bottom-right -k "todo_watch t Y ${PLANTODO_FLAG:-}"

vi -c 'set commentstring=#\ %s' activities.txt
tmux kill-pane
